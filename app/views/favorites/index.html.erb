<div class="page-header">
  <h1>
    Favorites
    <a href="/favorites/new" class="btn btn-lg btn-success">New Favorite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Users</th>
        <th>Food</th>
        <th>Resutaurant</th>
        <th>Actions</th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>
        <td>
          <% if favorite.users.present? %>
            <a href="/users/<%= favorite.users.id %>">
              <%= favorite.users.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if favorite.food.present? %>
            <a href="/foods/<%= favorite.food.id %>">
              <%= favorite.food.food_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if favorite.resutaurant.present? %>
            <a href="/restaurants/<%= favorite.resutaurant.id %>">
              <%= favorite.resutaurant.restaurant_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/favorites/<%= favorite.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == favorite.users %>
            <a href="/favorites/<%= favorite.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @favorites, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
